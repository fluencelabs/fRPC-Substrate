{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "remove",
    "verbatimModuleSyntax": true,
    "lib": ["es2023"]
  },
  "exclude": ["gateway/**/*"],
  "ts-node": {
    "esm": true
  },
  "types": ["node", "jest"]
}
